{% extends "index.html" %}

{% block title %}
{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
<h1 {% if result == 'You won' %} color="green" {% elif result == 'You lose' %} color="red" {% else %}
color="#6495ed" {% endif %}><b>{{ result }}</b></h1>
    <p>
    Your score: {{ game_state['user_score'] }}
    <br>
    {% for i in game_state['user_cards'] %}
      <img src="{{ url_for('static', filename=i) }}.svg" height="100">
    {% endfor %}
    </p>
    <p>
    PC score: {{ game_state['computer_score'] }}
    <br>
    {% for i in game_state['computer_cards'] %}
      <img src="{{ url_for('static', filename=i) }}.svg" height="100">
    {% endfor %}
    </p>

	<form action="/start_game" method="get">
		<button class="button" type="submit" value="start_game">Start new game</button>
	</form>
{% endblock %}
